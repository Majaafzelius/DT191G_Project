@model IEnumerable<Project_test.Models.Product>
@using System.Security.Claims


@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <form asp-action="Index" method="get">
        <p>
            <input type="text" name="searchString" />
            <input type="submit" value="Search" class="btn-secondary"/>
        </p>
    </form>
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="~/images/@item.ImagePath" class="card-img-top" alt="Product Image">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Price: SEK @item.Price</p>
                    <a href="@Url.Action("Details", new { id = item.ID })" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>

